{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "../../dist/plugin-server",
    "declaration": true,
    "composite": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "strict": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": ["es2022"],
    "types": []
  },
  "include": ["./**/*.ts"]
}

