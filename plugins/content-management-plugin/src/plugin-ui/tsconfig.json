{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2020",
        "jsx": "react",
        "outDir": "../../dist/plugin-ui",
        "importHelpers": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./css.d.ts"]
    },
    "include": ["./**/*.tsx", "./**/*.json", "./**/*.ts"]
}
