{
    "compilerOptions": {
        "baseUrl": "./",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "removeComments": false,
        "outDir": "./lib",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false,
        "target": "es5",
        "module": "esnext",
        "lib": ["es2017", "dom", "esnext.asynciterable"]
    },
    "include": ["src/**/*.ts", "src/*.ts"],
    "exclude": ["node_modules"]
}
