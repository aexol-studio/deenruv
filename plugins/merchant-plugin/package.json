{
  "name": "@deenruv/merchant-plugin",
  "version": "0.1.35",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/plugin-server/index.js",
  "exports": {
    ".": "./dist/plugin-server/index.js",
    "./plugin-server": "./dist/plugin-server/index.js",
    "./plugin-server/ui": "./dist/plugin-server/ui.js",
    "./plugin-ui": "./dist/plugin-ui/index.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc --build && cp -r ./src/plugin-server/ui ./dist/plugin-server",
    "watch": "concurrently -k -p \"[{name}]\" -n \"SERVER,UI\" -c \"yellow.bold,cyan.bold\" \"tsc --watch --project src/plugin-server/tsconfig.json\" \"tsc --watch --project src/plugin-ui/tsconfig.json\"",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint --fix ./src/**/*.ts",
    "zeus": "zeus http://localhost:3000/admin-api ./src/plugin-server --es && zeus http://localhost:3000/admin-api ./src/plugin-server/ui --td && zeus http://localhost:3000/admin-api ./src/plugin-ui --td --es"
  },
  "dependencies": {
    "@deenruv/admin-types": "workspace:^",
    "@deenruv/common": "workspace:^",
    "@deenruv/react-ui-devkit": "workspace:^",
    "@deenruv/ui-devkit": "workspace:^",
    "@deenruv/admin-ui": "workspace:^",
    "@nestjs/common": "~10.3.10",
    "@nestjs/graphql": "~12.2.0",
    "date-fns": "^4.1.0",
    "facebook-nodejs-business-sdk": "^23.0.1",
    "google-auth-library": "^9.15.0",
    "googleapis": "^144.0.0",
    "graphql": "~16.9.0",
    "graphql-tag": "^2.12.6",
    "graphql-zeus": "^5.4.2",
    "html-to-text": "^9.0.5",
    "lucide-react": "^0.363.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "sonner": "^1.4.41",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@deenruv/core": "workspace:^",
    "@graphql-typed-document-node/core": "3.2.0",
    "@types/express": "^4.17.21",
    "@types/facebook-nodejs-business-sdk": "^20.0.2",
    "@types/html-to-text": "^9.0.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "rimraf": "^5.0.10",
    "tslib": "^2.6.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "@deenruv/core": "^0.1.0"
  }
}
