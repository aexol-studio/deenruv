{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["dom.iterable", "DOM"],
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "./src",
        "strict": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "exclude": ["node_modules", "dist"]
}
