{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "NodeNext",
        "moduleResolution": "node16",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "strictPropertyInitialization": false,
        "target": "es2019",
        "strict": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./"
    },
    "exclude": ["node_modules", "admin_ui", "dist", "static", "./test-plugins", "./load-tesing", "./example-plugins", "cockroachdb-search-strategy.ts"],
    "ts-node": { "files": true }
}
