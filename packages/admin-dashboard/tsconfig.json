{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": false,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "skipLibCheck": true, // TODO: @kamil temponary hack we can't resolve good dependecies.
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": ["node_modules", "dist", "tailwind.config.ts"]
}
