{
    "compilerOptions": {
        "sourceMap": true,
        "jsx": "react",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": true,
        "incremental": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "composite": true,
        "outDir": "./dist",
        "lib": ["es6", "es7", "esnext", "dom"],
        "rootDir": "./src",
        "paths": {
            "@/*": ["./*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ],
        "baseUrl": "./src/"
    },
    "exclude": ["node_modules", "dist"]
}
