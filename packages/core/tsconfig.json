{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@deenruv/core": ["src/index.ts"],
      "@deenruv/core/*": ["src/*"]
    },
    "declaration": true,
    "removeComments": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  }
}
