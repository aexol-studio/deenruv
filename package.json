{
  "name": "deenruv",
  "version": "0.0.5",
  "private": true,
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "test": "pnpm -r --workspace-concurrency=1 test",
    "lint": "pnpm -r --workspace-concurrency=1 lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write --html-whitespace-sensitivity ignore",
    "docs:generate-typescript-docs": "node --import @deenruv/ts-node-register scripts/docs/generate-typescript-docs.ts",
    "docs:generate-graphql-docs": "node --import @deenruv/ts-node-register scripts/docs/generate-graphql-docs.ts --api=shop && node --import @deenruv/ts-node-register scripts/docs/generate-graphql-docs.ts --api=admin",
    "docs:build": "pnpm docs:generate-typescript-docs && pnpm docs:generate-graphql-docs",
    "codegen": "node --import @deenruv/ts-node-register scripts/codegen/generate-graphql-types.ts",
    "version": "pnpm check-imports && pnpm check-angular-versions && pnpm build && pnpm check-core-type-defs && pnpm generate-changelog && git add CHANGELOG* && git add */version.ts",
    "start:server": "pnpm -filter=@deenruv/server run start",
    "start:admin-ui": "pnpm -filter=@deenruv/panel run dev",
    "start": "concurrently -n server,admin-ui -c green,blue \"pnpm -filter=server run start\" \"pnpm -filter=panel run dev\"",
    "server-docker-up": "docker compose up -d",
    "server-docker-down": "docker compose down -v",
    "server-populate": "pnpm -filter=@deenruv/server populate",
    "build": "pnpm -r --workspace-concurrency=1 run build",
    "build:dev": "pnpm -r run build",
    "watch:plugin:deenruv-examples-plugin": "pnpm -filter=@deenruv/deenruv-examples-plugin run watch",
    "watch:plugin:deenruv-second-plugin": "pnpm -filter=@deenruv/deenruv-second-plugin run watch",
    "watch:package:react-ui-devkit": "pnpm -filter=@deenruv/react-ui-devkit run watch",
    "watch": "concurrently -n package,admin-panel -c yellow,red \"pnpm -filter=@deenruv/react-ui-devkit run watch\" \"pnpm -filter=@deenruv/admin-dashboard run watch\"",
    "check-imports": "node --import @deenruv/ts-node-register scripts/check-imports.ts",
    "check-core-type-defs": "node --import @deenruv/ts-node-register scripts/check-core-type-defs.ts",
    "check-angular-versions": "node --import @deenruv/ts-node-register scripts/check-angular-versions.ts",
    "generate-changelog": "node --import @deenruv/ts-node-register scripts/changelogs/generate-changelog.ts",
    "clean": "rm -rf node_modules && pnpm -r exec rm -rf node_modules && pnpm -r exec rm -rf dist",
    "translate": "dev-translate translate"
  },
  "devDependencies": {
    "@aexol/dev-translate": "^0.0.8",
    "@aexol/vite-plugin-dev-translate": "^0.1.0",
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@deenruv/ts-node-register": "workspace:*",
    "@graphql-codegen/add": "5.0.2",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/fragment-matcher": "5.0.2",
    "@graphql-codegen/typed-document-node": "^5.0.6",
    "@graphql-codegen/typescript": "4.0.9",
    "@graphql-codegen/typescript-operations": "4.2.3",
    "@graphql-codegen/visitor-plugin-common": "^5.5.0",
    "@graphql-tools/schema": "^10.0.4",
    "@swc/core": "^1.4.6",
    "@types/fs-extra": "^11.0.4",
    "@types/klaw-sync": "^6.0.5",
    "@types/node": "^20.11.19",
    "concurrently": "^8.2.2",
    "conventional-changelog-core": "^7.0.0",
    "cross-env": "^7.0.3",
    "find": "^0.3.0",
    "fs-extra": "^11.2.0",
    "graphql": "~16.9.0",
    "graphql-tag": "^2.12.6",
    "husky": "^4.3.0",
    "klaw-sync": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "rollup": "^4.18.0",
    "tinybench": "^2.6.0",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3",
    "typescript-eslint": "^8.29.0",
    "unplugin-swc": "^1.4.4",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-tailwindcss": "^3.18.0"
  },
  "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6"
}
